------------------------------------------------------------------------                          
                           CREATE DATABASE
------------------------------------------------------------------------
                           
CREATE DATABASE employee_db;
USE employee_db;

------------------------------------------------------------------------
                             CREATE TABLE
------------------------------------------------------------------------
CREATE TABLE employee (
    emp_id INT PRIMARY KEY AUTO_INCREMENT,
    name VARCHAR(100) NOT NULL,
    salary DECIMAL(10,2) NOT NULL,
    department VARCHAR(50)
);

